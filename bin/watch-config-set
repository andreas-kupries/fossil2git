#!/usr/bin/env tclsh
# Query and modify global configuration.

# @@ Meta Begin
# Application bin/watch-config-set ?
# Meta author      ?
# Meta category    ?
# Meta description ?
# Meta location    http:/core.tcl.tk/akupries/fossil2git
# Meta platform    tcl
# Meta require     ?
# Meta subject     ?
# Meta summary     ?
# @@ Meta End

package require Tcl 8.5
package require sqlite3

proc main {} {
    do {*}[cmdline]
    return
}

proc cmdline {} {
    global argv
    if {[llength $argv] != 2} { usage }

    #lassign $argv
    return $argv
}

proc usage {} {
    global argv0
    puts stderr "Usage: $argv0 key value"
    exit 1
}

# # ## ### ##### ######## ############# ######################

proc dbfile {} {
    set f ~/.fossil.watch
    return $f
}

proc db {} {
    set watch [dbfile]
    if {![file exists $watch]} {
	puts "No database"
	return
    }
    sqlite3 DB $watch
    return
}

# # ## ### ##### ######## ############# ######################

proc do {key value} {
    db
    DB eval {
	UPDATE config
	SET    value = :value
	WHERE  key   = :key
    }
    if {![DB changes]} {
	DB eval {
	    INSERT INTO config VALUES (:key, :value)
	}
    }
    puts "$key := $value"
    return
}

# # ## ### ##### ######## ############# ######################

main
exit
