#!/usr/bin/env tclsh
# Drop an artifact from the seen table, forcing mail regeneration.

# @@ Meta Begin
# Application bin/watch-dump ?
# Meta author      ?
# Meta category    ?
# Meta description ?
# Meta location    http:/core.tcl.tk/akupries/fossil2git
# Meta platform    tcl
# Meta require     ?
# Meta subject     ?
# Meta summary     ?
# @@ Meta End

package require Tcl 8.5
package require http

proc main {} {
    do {*}[cmdline]
    return
}

proc cmdline {} {
    global argv
    if {[llength $argv] != 2} { usage }

    #lassign $argv
    return $argv
}

proc usage {} {
    global argv0
    puts stderr "Usage: $argv0 repo artifactid"
    exit 1
}

# # ## ### ##### ######## ############# ######################

proc do {url artifact} {
    puts [get $url/raw?name=$artifact]
}

# # ## ### ##### ######## ############# ######################
## http retrieval helper

proc get {url} {
    set token [http::geturl $url]
    if {[http::ncode $token] != 200} {
	puts "Fail: [http::ncode $token] [http::error $token]"
	http::cleanup $token
	return {}
    }

    set data [http::data $token]
    http::cleanup $token
    return $data
}

# # ## ### ##### ######## ############# ######################

main
exit
