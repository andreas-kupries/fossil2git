#!/usr/bin/env tclsh
# Drop an artifact from the seen table, forcing mail regeneration.

# @@ Meta Begin
# Application bin/watch-unsee ?
# Meta author      ?
# Meta category    ?
# Meta description ?
# Meta location    http:/core.tcl.tk/akupries/fossil2git
# Meta platform    tcl
# Meta require     ?
# Meta subject     ?
# Meta summary     ?
# @@ Meta End

package require Tcl 8.5
package require sqlite3

proc main {} {
    do {*}[cmdline]
    return
}

proc cmdline {} {
    global argv
    if {[llength $argv] != 1} { usage }

    #lassign $argv
    return $argv
}

proc usage {} {
    global argv0
    puts stderr "Usage: $argv0 artifactid"
    exit 1
}

# # ## ### ##### ######## ############# ######################

proc dbfile {} {
    set f ~/.fossil.watch
    return $f
}

proc db {} {
    set watch [dbfile]
    if {![file exists $watch]} {
	puts "No database"
	return
    }
    sqlite3 DB $watch
    return
}

# # ## ### ##### ######## ############# ######################

proc do {artifact} {
    db
    DB eval {
	DELETE FROM seen WHERE hash = :artifact
    }

    puts "Unseen artifacts: [DB changes]"
    return
}

# # ## ### ##### ######## ############# ######################

main
exit
