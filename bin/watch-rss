#!/usr/bin/env tclsh
# Drop an artifact from the seen table, forcing mail regeneration.

package require Tcl 8.5
package require http

proc main {} {
    do {*}[cmdline]
    return
}

proc cmdline {} {
    global argv
    if {[llength $argv] != 2} { usage }

    #lassign $argv
    return $argv
}

proc usage {} {
    global argv0
    puts stderr "Usage: $argv0 repo n"
    exit 1
}

# # ## ### ##### ######## ############# ######################

proc do {url n} {
    puts [get $url/timeline.rss?type=t&n=$n]
}

# # ## ### ##### ######## ############# ######################
## http retrieval helper

proc get {url} {
    set token [http::geturl $url]
    if {[http::ncode $token] != 200} {
	puts "Fail: [http::ncode $token] [http::error $token]"
	http::cleanup $token
	return {}
    }

    set data [http::data $token]
    http::cleanup $token
    return $data
}

# # ## ### ##### ######## ############# ######################

main
exit
