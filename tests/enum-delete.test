## client enum delete - Remove existing enumerations.

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# TODO: Prevent --global for unshareable per-repo settings! --> location

# # ## ### ##### ######## ############# #####################

test enum-delete-1.0 {client enum delete, wrong args, not enough} -setup {
    stage-open
} -body {
    run enum delete
} -cleanup {
    stage-close
} -match glob -returnCodes error -result "wrong#args, not enough*"

test enum-delete-1.1 {client enum delete, wrong args, too many} -setup {
    stage-open
} -body {
    run enum delete N X
} -cleanup {
    stage-close
} -match glob -returnCodes error -result "wrong#args, too many*"

test enum-delete-1.2 {client enum delete, unknown definition} -setup {
    stage-open
} -body {
    run enum delete foo
} -cleanup {
    run enum delete foo
    stage-close
} -match glob -returnCodes error -result ""

test enum-delete-1.3 {client enum delete, bad name (illegal character)} -setup {
    stage-open
} -body {
    run enum delete foo!
} -cleanup {
    stage-close
} -match glob -returnCodes error -result ""

# # ## ### ##### ######## ############# #####################

test enum-delete-2.1 {client enum delete} -setup {
    stage-open
    run enum create foo
} -body {
    run enum delete foo
    run enums
} -cleanup {
    stage-close
} -result [viewFile support/e-empty.txt]

