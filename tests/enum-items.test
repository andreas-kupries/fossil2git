# # ## ### ##### ######## ############# #####################

test enum-items-1.0 {client enum items, wrong args, not enough} -setup {
    stage-open
} -body {
    run enum items
} -cleanup {
    stage-close
} -match glob -returnCodes error -result "wrong#args, not enough*"

test enum-items-1.1 {client enum items, wrong args, too many} -setup {
    stage-open
} -body {
    run enum items E X
} -cleanup {
    stage-close
} -match glob -returnCodes error -result "wrong#args, too many*"

test enum-items-1.2 {client enum items, unknown enumeration} -setup {
    stage-open
} -body {
    run enum items foo
} -cleanup {
    stage-close
} -match glob -returnCodes error -result ""

# # ## ### ##### ######## ############# #####################

test enum-items-2.0 {client enum items, empty enum} -setup {
    stage-open
    run enum create foo
} -body {
    run enum items foo
} -cleanup {
    run enum delete foo
    stage-close
} -result [viewFile support/ei-20.txt]

test enum-items-2.1 {client enum items} -setup {
    stage-open
    run enum create foo a b c d e f
} -body {
    run enum items foo
} -cleanup {
    run enum delete foo
    stage-close
} -result [viewFile support/ei-21.txt]

